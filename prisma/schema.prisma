generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String   @id @default(uuid())
    name         String
    authorName   String?  @map("author_name")
    email        String   @unique
    passwordHash String   @map("password_hash")
    cnpj_cpf     String   @unique
    phone        String
    state        String
    city         String
    cep          String   @db.Char(10)
    address      String
    avatarImage  String?  @map("avatar_image")
    createdAt    DateTime @default(now()) @map("created_at")
    posts        Post[]

    @@map("users")
}

model Post {
    id          String   @id @default(uuid())
    fullName    String   @unique @map("full_name")
    description String
    contact     String
    photo       String?
    createdAt   DateTime @default(now()) @map("created_at")

    user_id String
    user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

    images Image[]

    //weather_event_id String
    // weather          WeatherEvent @relation(fields: [weather_event_id], references: [id])

    @@map("posts")
}

model Image {
    id      String @id @default(uuid())
    url     String
    post_id String

    post Post @relation(fields: [post_id], references: [id], onDelete: Cascade)

    @@map("images")
}

